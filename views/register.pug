extends layout

block content
  //- include needed javascript file(s) here
  script(src="/registerCtr.js")
    
  section(id="main" class="wrapper")
    div(class="inner")
      header(class="align-center")
        h2 Register
      div(class="box")
        div(class="align-center")
          form(action="/register", method="post" onsubmit="return registerCtr.onsubmit()")
            div(class="row uniform")
              div(class="12u$")
                input(name = "username" id="username" type = "text" placeholder = "username" required)
              div(class="12u$")
                input(name = "password" id="password" type = "password" placeholder = "password" required)
              div(class="12u$")
                input(name = "email" id="email" type="email" placeholder = "email" required)
              div(class="12u$")
                input(name = "phone" id="phone" type="tel" placeholder = "xxx-xxx-xxxx" required)
              div(class="12u$")
                ul(class="actions")
                  li
                    input(type="Submit" class="button special fit" value="Register")
