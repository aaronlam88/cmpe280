extends layout

block content
  section(id="main" class="wrapper")
    div(class="inner")
      header(class="align-center")
        if error
          h4(class="error-message")=error.message
        h2 Login
      div(class="box")
        div(class="align-center")
          form(action="/profile", method="post")
            div(class="row uniform")
              div(class="12u$")
                input(name = "username" id="username" type = "text" required placeholder = "username")
              div(class="12u$")
                input(name = "password" id="password" type = "password" required placeholder = "password")
              div(class="12u$")
                ul(class="actions")
                  li
                    input(type="Submit" value="Log in" class="button special fit")
                ul(class="actions")
                  li
                    a(href="/register" class="button alt small") Register
